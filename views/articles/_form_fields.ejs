<div class="form-group">
    <label for="title">Title</label>
    <input required value = "<%= article.title %>" required type="text" name="title" id="title" class="form-control">  

</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea> 
    
</div>

<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea> 

</div>

<div class="form-group">
    <label for="author">Author</label>
    <input required value = "<%= article.author %>" required type="text" name="author" id="author" class="form-control">  

</div>

<a href="/" class="btn btn-danger">Cancel</a>  
<button type="submit" class="btn btn-primary my-3">Save</button>  